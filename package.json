{
  "name": "nuxt-app",
  "author": "irwinarruda",
  "private": true,
  "type": "module",
  "license": "MIT",
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "test": "concurrently -n nuxt,vitest -c red,blue --hide nuxt -k -s command-vitest \"nuxt dev\" \"vitest run\"",
    "test:watch": "vitest --watch",
    "services:up": "docker compose -f infra/compose.yaml up -d",
    "services:down": "docker compose -f infra/compose.yaml down",
    "services:ready": "bun services:up && node ./infra/scripts/wait-for-postgres.js && bun migrations:up",
    "migrations:create": "node-pg-migrate -m infra/migrations create",
    "migrations:up": "node-pg-migrate -m infra/migrations up",
    "migrations:down": "node-pg-migrate -m infra/migrations down",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "secrets": "secretlint \"**/*\"",
    "commit": "cz",
    "clean": "rm -rf .nuxt .output node_modules",
    "pretest": "bun services:ready",
    "posttest": "bun services:down",
    "predev": "bun services:ready",
    "postbuild": "./infra/scripts/postbuild.sh",
    "postinstall": "nuxt prepare",
    "prepare": "husky"
  },
  "dependencies": {
    "@nuxt/icon": "1.13.0",
    "bcryptjs": "^3.0.2",
    "eslint": "^9.28.0",
    "node-pg-migrate": "8.0.1",
    "nuxt": "^3.17.5",
    "pg": "^8.16.0",
    "uuid": "^11.1.0",
    "vue": "^3.5.16",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@faker-js/faker": "^9.8.0",
    "@nuxt/eslint": "1.4.1",
    "@nuxt/test-utils": "^3.18.0",
    "@secretlint/secretlint-rule-preset-recommend": "^9.3.4",
    "@tailwindcss/vite": "^4.1.8",
    "@types/node-pg-migrate": "^2.3.1",
    "@types/pg": "^8.15.4",
    "@vue/test-utils": "^2.4.6",
    "commitizen": "^4.3.1",
    "concurrently": "^9.1.2",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv-expand": "^12.0.2",
    "husky": "^9.1.7",
    "prettier": "^3.5.3",
    "secretlint": "^9.3.4",
    "tailwindcss": "^4.1.8",
    "vitest": "^3.2.1"
  },
  "packageManager": "bun@1.2.15",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
